{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@now/static-build"
    },
    {
      "src": "doc/package.json",
      "use": "@now/static-build",
      "config": {"distDir": "public"}
    }
  ],
  "routes": [
    {"src": "/(.*)", "dest": "doc/$1"},
    {"handle": "filesystem"},
    {"src": "/.*", "status": 404, "dest": "404.html"}
  ]
}
