{
  "compilerOptions": {
    "target": "esnext",
    "allowJs": false,
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "rootDir": "src",
    "baseUrl": ".",
    "declaration": true,
    "importHelpers": true,
    "noEmitHelpers": false,
    "noImplicitAny": true,
    "noResolve": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "declarationDir": "./dist",
    "paths": {
      "src/*": ["src/*"]
    },
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__"]
}
